<p id="notice"><%= notice %></p>
<h2> Shopping Cart </h2>
  <table>
    <tr>
      <th> Item Name </th>
      <th> Price </th>
      <th> Quantity </th>
    </tr>
    <% @cart.line_items.each do |item| %>
    <tr>
    <td> <%= item.product.name %> </td>
    <td> <%= number_to_currency(item.product.price.to_f/100) %> </td>
    <td> <%=item.quantity%> </td>
    </tr>
    <% end %>
  </table>

  <p class = "quantity"> Total Items Purchased: <%= @cart.total_quantity %> </p>

  <p> Total Price: <%= number_to_currency(@cart.price.to_f/100.0) %></p>

<%= button_to 'Store', products_path, method: :get %>
<%= render 'payola/transactions/checkout', sellable: @cart %>
